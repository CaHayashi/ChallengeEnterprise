@model List<Produto>

@{
  ViewData["Title"] = "Produtos";
}

<h1> PRODUTOS NO ESTOQUE </h1>

    <table class="table">
        <tr>
            <th> ID: </th>
            <th> Nome: </th>
            <th> Peso: </th>
            <th> Quantidade: </th>
            <th> Data de Validade: </th>
            <th> Data da Compra: </th>
        </tr>
        @foreach (var item in Model)
        {
        <tr>
            <th>@item.Id</th>
            <th>@item.Nome</th>
            <th>@item.Peso</th>
            <th>@item.Quantidade</th>
            <th>@item.DataValidade</th>
            <th>@item.DataCompra</th>
            <td>
                <a asp-action="editar" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark"> EDITAR </a>
                <a asp-action="remover" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"> REMOVER </a>
            </td>
        </tr>
        }
    </table>


    <a asp-action="cadastrar" class="btn btn-primary"> CADASTRAR PRODUTO NO ESTOQUE </a>
